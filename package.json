{
  "name": "transformerai",
  "displayName": "TransformerAI Assistant",
  "description": "Помощник для генерации кода",
  "icon": "images/logo.png",
  "version": "0.0.6",
  "publisher": "Rus7Iv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rus7Iv/transformerAI.git"
  },
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:transformerai.generateCode",
    "onCommand:transformerai.setApiKey",
    "onCommand:transformerai.setProxy",
    "onCommand:transformerai.disableProxy"
  ],
  "contributes": {
    "configuration": {
      "title": "transformerAI",
      "properties": {
        "transformerAI.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for AI21 Studio"
        },
        "transformerAI.proxy": {
          "type": "object",
          "default": null,
          "description": "Proxy configuration (host, port, auth)"
        }
      }
    },
    "commands": [
      {
        "command": "transformerai.generateCode",
        "title": "Сгенерировать код по комментарию"
      },
      {
        "command": "transformerai.setApiKey",
        "title": "Установить ключ API для AI21 Studio"
      },
      {
        "command": "transformerai.setProxy",
        "title": "Настроить прокси"
      },
      {
        "command": "transformerai.disableProxy",
        "title": "Отключить прокси"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "openai": "^4.79.1"
  }
}